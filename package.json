{
  "name": "mindlens",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:desktop": "pnpm --filter @mindlens/desktop dev",
    "dev:watch": "pnpm --filter @mindlens/desktop dev --features tauri/devtools",
    "build": "pnpm --filter frontend build",
    "build:desktop": "pnpm --filter @mindlens/desktop build",
    "clean": "pnpm --filter @mindlens/desktop clean"
  },
  "devDependencies": {}
}